@@ -4990,6 +4990,7 @@ static int show_usage(struct cmd_context *ctx);
 #define nl_gpause	NULL
 #define nl_gchannels	NULL
 #define nl_geee		NULL
+#define nl_gfec		NULL
 #endif
 
 static const struct option {
@@ -5199,7 +5200,7 @@ static const struct option {
 	  "		[ ap-shared ]\n"
