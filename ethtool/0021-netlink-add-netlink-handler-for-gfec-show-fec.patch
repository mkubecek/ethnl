@@ -93,6 +93,11 @@ static struct monitor_option monitor_opts[] = {
 		.cmd		= ETHTOOL_MSG_PARAMS_NTF,
 		.info_mask	= ETHTOOL_IM_PARAMS_EEE,
 	},
+	{
+		.pattern	= "--show-fec|--set-fec",
